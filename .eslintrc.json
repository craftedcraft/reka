{
  "parser": "babel-eslint",
  "env": {
    "node": true,
    "jest": true,
    "cypress/globals": true
  },
  "extends": [
    "plugin:cypress/recommended",
    "plugin:react/recommended",
    "standard"
  ],
  "plugins": [
    "node",
    "promise",
    "react",
    "cypress",
    "standard",
    "chai-friendly"
  ],
  "rules": {
    "no-unused-expressions": 0,
    "chai-friendly/no-unused-expressions": 2
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}
